  <main class="card">
    <h1 class="heading">Ä°Ã§ten bir soru varâ€¦</h1>
    <p class="sub">Kalbim hazÄ±r; cevap dÃ¼rÃ¼st olsun ðŸ’«</p>
    <p class="question" id="question">Beni seviyor musun?</p>
    <div class="buttons">
      <button id="yes" class="btn-yes">Evet</button>
      <button id="no" class="btn-no">HayÄ±r</button>
    </div>
    <div id="msg" class="message"></div>
  </main>
  <div class="effects"></div>

  <script>
    const yesBtn=document.getElementById("yes");
    const noBtn=document.getElementById("no");
    const msg=document.getElementById("msg");
    const question=document.getElementById("question");
    const effects=document.querySelector(".effects");
    const falling=document.querySelector(".falling-hearts");

    function setDisabled(state=true){
      [yesBtn,noBtn].forEach(b=>b.disabled=state);
    }
    function showMessage(text,sub="",pulse=false){
      msg.innerHTML=text+(sub?`<br><small>${sub}</small>`:"");
      msg.classList.add("show");
      if(pulse) msg.classList.add("pulse");
    }
    function heartBurst(x,y,count=24){
      for(let i=0;i<count;i++){
        const h=document.createElement("span");
        h.textContent="â¤";
        h.style.position="absolute";
        h.style.left=(x)+"px"; h.style.top=(y)+"px";
        h.style.fontSize=(Math.random()*16+10)+"px";
        const angle=Math.random()*Math.PI*2;
        const dist=Math.random()*120+40;
        const tx=Math.cos(angle)*dist;
        const ty=Math.sin(angle)*dist;
        h.style.transition="transform 1.2s ease,opacity 1.2s";
        effects.appendChild(h);
        requestAnimationFrame(()=>{
          h.style.transform=`translate(${tx}px,${ty}px) scale(.8)`;
          h.style.opacity="0";
        });
        setTimeout(()=>h.remove(),1200);
      }
    }
    yesBtn.addEventListener("click",()=>{
      setDisabled(true);
      showMessage("Ben de seni Ã§ok seviyorum! ðŸ’–","Kalbim resmi olarak sana emanet.",true);
      const r=yesBtn.getBoundingClientRect();
      heartBurst(r.left+r.width/2,r.top+r.height/2);
      question.textContent="Kalplerimiz eÅŸleÅŸti!";
    });
    noBtn.addEventListener("click",()=>{
      yesBtn.textContent="Evet"; noBtn.textContent="Evet";
      setDisabled(true);
      setTimeout(()=>{
        showMessage("Kalbinin cevabÄ± zaten Ã§oktan â€˜Evetâ€™ dedi ðŸ’•","Ä°tiraf ettirdim galiba.",true);
        question.textContent="Cevap netleÅŸti!";
      },3000);
    });

    // SÃ¼rekli dÃ¼ÅŸen kalpler
    function spawnFallingHeart(){
      const h=document.createElement("span");
      h.textContent="â¤";
      h.style.left=Math.random()*100+"vw";
      h.style.fontSize=(Math.random()*12+10)+"px";
      h.style.animationDuration=(Math.random()*4+6)+"s";
      falling.appendChild(h);
      setTimeout(()=>h.remove(),10000);
    }
    setInterval(spawnFallingHeart,500);
  </script>
